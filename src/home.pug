  <body>
  include includes/header.pug
  main.main 
    section.main__firstSection.firstSection
        img.firstSection__picture(src="assets/img/bc_first_section.png")
        .firstSection__wrapper
            h1.firstSection__title NARUTO SHIPPUDEN
            p Toute les saisons disponible dès maintenant
            .firstSection__buttons
                button Regarder
                button + Ma liste

    section.main__new.new
        .new__top.top
            h2.new__title Nouveautés
            .new__more
                p.texte  Voir plus

        .new__list
            img.new__poster(src="assets/img/Nouveauté/Fate_Stay_Night.png")
